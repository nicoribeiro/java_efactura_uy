						</xs:element>
						<xs:element name="Serie" type="ns0:SerieType">
							<xs:annotation>
								<xs:documentation>Serie CFE</xs:documentation>
							</xs:annotation>
						</xs:element>
						<xs:element name="DNro">
							<xs:annotation>
								<xs:documentation>Nro Inicial (Desde)</xs:documentation>
							</xs:annotation>
							<xs:simpleType>
								<xs:restriction base="ns0:NroCFEType">
									<xs:minInclusive value="1"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
						<xs:element name="HNro">
							<xs:annotation>
								<xs:documentation>Nro Final (Hasta)</xs:documentation>
							</xs:annotation>
							<xs:simpleType>
								<xs:restriction base="ns0:NroCFEType">
									<xs:minInclusive value="1"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
						<xs:element name="TA" type="xs:string" fixed="E">
							<xs:annotation>
								<xs:documentation>Tipo de Autorizaci贸n</xs:documentation>
