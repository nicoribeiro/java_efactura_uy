									<xs:totalDigits value="11"/>
								</xs:restriction>
							</xs:simpleType>
						</xs:element>
						<xs:element name="FA" type="ns0:FechaType">
							<xs:annotation>
								<xs:documentation>Fecha Autorizacion en Formato AAAA-MM-DD</xs:documentation>
							</xs:annotation>
						</xs:element>
						<xs:element name="FVD" type="ns0:FechaType">
							<xs:annotation>
								<xs:documentation>Fecha de Vigencia de la Documentaci贸n</xs:documentation>
							</xs:annotation>
						</xs:element>
               			<xs:element name="CAEEspecial" minOccurs="0" maxOccurs="1">
                            <xs:simpleType>
								<xs:restriction base="xs:integer">
                                    <xs:totalDigits value="1"/>
                                    <xs:enumeration value="1"/>
									<xs:enumeration value="2"/>
									<xs:enumeration value="3"/>
									<xs:enumeration value="4"/>
                                </xs:restriction>
				            </xs:simpleType>
			            </xs:element>
               			<xs:element name="CausalCAEEsp" minOccurs="0" maxOccurs="1">
                  	        <xs:simpleType>
            		            <xs:restriction base="xs:integer">
			          	    		<xs:totalDigits value="3"/>
           		         		</xs:restriction>
		            		</xs:simpleType>
            			</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element ref="ds:Signature"/>
		</xs:sequence>
		<xs:attribute name="version" use="required" fixed="1.0">
			<xs:simpleType>
				<xs:restriction base="xs:string">
